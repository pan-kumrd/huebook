<div class="vertical-center">
<div class="panel panel-default devise-window">
  <div class="panel-heading">
    <h2>Forgot your password?</h2>
  </div>
  <div class="panel-body">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <% if !devise_error_messages!.empty? %>
    <div class="alert alert-warning devise-warning">
        <%= devise_error_messages! %>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block btn-lng" %>
  </div>
  <% end %>
  </div>
  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
